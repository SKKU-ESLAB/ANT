# Install Information for Target Device
export ANT_TARGET_NAME="raspberry-pi2_3"
export ANT_SYSTEM_BIN_DIR="/usr/bin"

# Dependent binary path
export ANT_WPA_SUPPLICANT_PATH="/usr/bin/ant-deps/wpa_supplicant"
export ANT_WPA_CLI_PATH="/usr/bin/ant-deps/wpa_cli"
export ANT_DELETESEM_PATH="/usr/bin/ant-deps/deletesem"

# Runtime directory Path
export ANT_BIN_DIR="/etc/ant/bin"
export ANT_CONFIG_DIR="/etc/ant/config"
export ANT_SENSOR_DRIVER_DIR="/etc/ant/device-drivers"
export ANT_APPS_DIR="/etc/ant/apps"
export ANT_DATA_DIR="/etc/ant/data"

# Wi-fi Direct Name
export ANT_WFD_NAME="ANT"
